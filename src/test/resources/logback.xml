<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight(%d{HH:mm:ss.SSS}) %highlight([%thread]) %highlight(%-5level) %highlight(%logger{50}) %highlight(- %msg%n)
            </pattern>
        </encoder>
    </appender>

    <logger name="org.apache.pulsar.client.impl" level="WARN"/>
    <logger name="org.apache.pulsar.client.impl.ClientCnx" level="ERROR"/>
    <logger name="org.apache.pulsar.client.impl.ConsumerImpl" level="ERROR"/>

    <logger name="no.ssb.rawdata.pulsar" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
